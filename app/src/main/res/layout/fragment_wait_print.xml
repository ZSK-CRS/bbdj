<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="90dp"
    android:layout_marginTop="8dp"
    android:gravity="center_vertical"
    android:background="@color/whilte"
    android:orientation="horizontal">

    <LinearLayout
        android:gravity="center_vertical"
        android:id="@+id/ll_deliver"
        android:layout_width="40dp"
        android:layout_height="40dp">

        <ImageView
            android:layout_gravity="center"
            android:id="@+id/ic_deliver"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="10dp"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_toRightOf="@+id/ll_deliver"
        android:orientation="vertical">

        <LinearLayout
            android:paddingBottom="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="50dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="运单号:"
                android:textColor="@color/grey_7"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_bill_number"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="47365632232522"
                android:singleLine="true"
                android:paddingRight="10dp"
                android:textColor="@color/grey_7"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:background="@drawable/tv_bg_grey_1"
                android:gravity="center_vertical"
                android:paddingLeft="7dp"
                android:paddingTop="1dp"
                android:paddingRight="7dp"
                android:paddingBottom="1dp"
                android:text="已实名"
                android:textColor="@color/grey_2"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="待打印"
                android:textColor="@color/red"
                android:textSize="13sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="3dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="5dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_send_person"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="马云"
                android:textColor="@color/grey_7"
                android:textSize="13sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="   ->   "
                android:textColor="@color/grey_7"
                android:textSize="13sp" />

            <TextView
                android:id="@+id/tv_receive_person"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:text="马化腾"
                android:textColor="@color/grey_7"
                android:textSize="13sp" />


            <TextView
                android:id="@+id/tv_receive_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:text="12 - 18  17:47"
                android:textColor="@color/grey_2"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/bt_immediately_seal"
        android:layout_width="65dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bt_bg_1"
        android:text="立即打印"
        android:layout_marginBottom="8dp"
        android:textColor="@color/whilte"
        android:textSize="13sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@color/grey_4" />

</RelativeLayout>