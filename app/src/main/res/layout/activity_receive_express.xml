<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".community.activity.ConfirmReceiveActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/white"
            android:gravity="center_vertical"
            android:paddingRight="10dp">

            <RelativeLayout
                android:id="@+id/iv_back"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_centerVertical="true"
                android:gravity="center">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_centerVertical="true"
                    android:layout_gravity="center_vertical"
                    android:scaleType="centerInside"
                    android:src="@drawable/ic_arrow_left" />

            </RelativeLayout>

            <TextView
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:gravity="center"
                android:text="揽收快递"
                android:textColor="@color/grey_7"
                android:textSize="18sp" />

            <ImageView
                android:layout_width="25dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:scaleType="centerInside"
                android:src="@drawable/ic_document_" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey_14" />





        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:cardCornerRadius="10dp"
            app:cardElevation="5dp"
            app:cardUseCompatPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingBottom="15dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:text="收件人信息"
                        android:textColor="@color/grey_7"
                        android:textSize="15sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_14" />


                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/tv_receive_address"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:text="收件人地址"
                    android:textColor="@color/grey_7"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_receive_person"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="姓名    电话"
                    android:textColor="@color/grey_2"
                    android:textSize="15sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <View
                        android:layout_width="3dp"
                        android:layout_height="20dp"
                        android:background="@color/mainColor" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="center_vertical"
                        android:paddingLeft="7dp"
                        android:text="寄件人信息"
                        android:textColor="@color/grey_7"
                        android:textSize="15sp" />


                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/grey_14" />


                <android.support.v7.widget.AppCompatTextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dp"
                    android:lineSpacingExtra="5dp"
                    android:paddingLeft="10dp"
                    android:paddingRight="10dp"
                    android:id="@+id/tv_send_address"
                    android:text="寄件人地址"
                    android:textColor="@color/grey_7"
                    android:textSize="17sp" />

                <TextView
                    android:id="@+id/tv_send_message"
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:gravity="center_vertical"
                    android:paddingLeft="10dp"
                    android:text="姓名   电话"
                    android:textColor="@color/grey_2"
                    android:textSize="15sp" />

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <View
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_marginTop="20dp"
            android:background="#FDFCFC" />
        
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">
        
            <TextView
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"
                android:text="订  单  号"
                android:layout_width="80dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_dingdan"
                android:textColor="@color/grey_7"
                android:gravity="center_vertical|right"
                android:text="1364 3636 8877 4563"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FDFCFC" />
        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"
                android:text="物品类型"
                android:layout_width="80dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_goods_type"
                android:textColor="@color/grey_7"
                android:gravity="center_vertical|right"
                android:text="数码"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"
                android:text="物品重量"
                android:layout_width="80dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_goods_weight"
                android:textColor="@color/grey_7"
                android:gravity="center_vertical|right"
                android:text="1KG"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"
                android:text="快递公司"
                android:layout_width="80dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_express_name"
                android:textColor="@color/grey_7"
                android:gravity="center_vertical|right"
                android:text="中通快递"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"
                android:text="快递单号"
                android:layout_width="80dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_kuaididanhao"
                android:textColor="@color/grey_7"
                android:gravity="center_vertical|right"
                android:text="1364 3636 8877 4563"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />


        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FDFCFC" />

        <LinearLayout
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <TextView
                android:textColor="@color/grey_2"
                android:gravity="center_vertical"
                android:text="收取金额"
                android:layout_width="80dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/tv_money"
                android:textColor="@color/yellow"
                android:gravity="center_vertical|right"
                android:text="123.00元"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:textSize="15sp"
                android:layout_height="match_parent" />

        </LinearLayout>

        <View
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#FDFCFC" />


        <Button
            android:id="@+id/bt_confirm"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="25dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/bt_bg_8"
            android:text="确认收件"
            android:textColor="@color/white"
            android:textSize="17sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="20dp" />

    </LinearLayout>


</android.support.v4.widget.NestedScrollView>