<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:paddingTop="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_item_order_number"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="4754621232233"
            android:textColor="@color/grey_7"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_tag_number"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/shap_tv_bg_2"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text="126012"
            android:textColor="@color/mainColor"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:paddingBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingLeft="10dp"
        android:paddingRight="10dp">

        <TextView
            android:id="@+id/tv_item_express"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="中通快递"
            android:textColor="@color/grey_7"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_item_time"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:paddingLeft="4dp"
            android:paddingTop="2dp"
            android:paddingRight="4dp"
            android:paddingBottom="2dp"
            android:text="2019-03-12 12:33:08"
            android:textColor="@color/grey_2"
            android:textSize="15sp" />
    </LinearLayout>
    
    <View
        android:background="@color/grey_6"
        android:layout_width="match_parent"
        android:layout_height="1dp"/>

</LinearLayout>