<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/whilte"
    android:orientation="vertical">

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="持卡人姓名:" />

        <EditText
            android:id="@+id/et_account_name"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写姓名"
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="90dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="持卡人卡号:" />

        <EditText
            android:id="@+id/et_account"
            android:layout_weight="1"
            android:paddingLeft="15dp"
            android:layout_width="0dp"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint="请填写卡号"
            android:textSize="13sp" />

        <ImageView
            android:id="@+id/iv_identify_bank"
            android:layout_gravity="center_vertical"
            android:src="@drawable/ic_camera"
            android:scaleType="centerInside"
            android:layout_width="25dp"
            android:layout_height="25dp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <LinearLayout
        android:layout_marginRight="15dp"
        android:layout_marginLeft="15dp"
        android:layout_width="match_parent"
        android:layout_height="45dp">

        <TextView
            android:layout_width="100dp"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="持卡人开户行:" />

        <EditText
            android:id="@+id/et_account_bank"
            android:paddingLeft="15dp"
            android:layout_width="match_parent"
            android:singleLine="true"
            android:layout_height="match_parent"
            android:background="@null"
            android:hint=""
            android:textSize="13sp" />

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey_6" />

    <Button
        android:id="@+id/bt_commit"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="30dp"
        android:background="@drawable/bt_bg_8"
        android:text="提交"
        android:textColor="#ffffff"
        android:textSize="15sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="20dp">


        <TextView
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="30dp"
            android:gravity="center_vertical"
            android:text="备注:"
            android:textSize="13sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="1、绑定后不可更改"
            android:textSize="13sp" />

    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:minHeight="25dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="70dp"
        android:gravity="center_vertical"
        android:text="2、只可绑定一张储蓄卡账户"
        android:textSize="13sp" />

    <android.support.v7.widget.AppCompatTextView
        android:layout_marginRight="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="25dp"
        android:layout_marginLeft="70dp"
        android:lineSpacingExtra="5dp"
        android:gravity="center_vertical"
        android:text="3、如需更改请联系客服。电话: 010-3278234"
        android:textSize="13sp" />


</LinearLayout>